#!/usr/bin/env ruby

require 'net/http'
require 'uri'

def open(url)
  Net::HTTP.get(URI.parse(url))
end
ubuntu_release_version=  ARGV[0] || '16.04'
ubuntu_iso_url="releases.ubuntu.com/#{ubuntu_release_version}/SHA256SUMS"
ubuntu_iso=''
centos_iso=''
ubuntu_sha=''
centos_sha=''
  p page_content = open("http://#{ubuntu_iso_url}").split("\n")
  p page_content.map! {|x| x.split("\s*").reverse}
